<UserControl x:Class="catan.ResourceTiles.ResourceMarkerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" FontWeight="Bold">
    <Viewbox>
        <Grid Width="100" Height="100">
            <Ellipse Fill="LightSlateGray" Stroke="Black"
                     StrokeThickness="3"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{Binding Letter}" HorizontalAlignment="Center" Padding="0" Margin="0"/>
                <TextBlock Text="{Binding Number}" HorizontalAlignment="Center" FontSize="36" Padding="0" Margin="0"/>
            </StackPanel>
        </Grid>
    </Viewbox>
</UserControl>
